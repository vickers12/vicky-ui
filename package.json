{
    "name": "vicky-ui",
    "packageManager": "pnpm@10.14.0",
    "version": "0.0.0",
    "type": "module",
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "scripts": {
        "dev": "vite",
        "build:components": "pnpm --filter @vicky-ui/components run build",
        "build:tokens": "pnpm --filter @vicky-ui/tokens run build",
        "build:pkg": "pnpm --filter=./packages/* run build",
        "ci:publish": "pnpm build:pkg && changeset publish --access public --no-git-checks",
        "test": "vitest run --config vitest.unit.config.ts",
        "test:components": "pnpm --filter @vicky-ui/components run test",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:css": "stylelint '**/*.{css,scss}'",
        "typecheck": "tsc",
        "format": "prettier --write .",
        "preview": "vite preview",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist node_modules/.cache",
        "reset": "pnpm clean && pnpm reset:modules",
        "reset:modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "list-outdated-deps": "pnpm outdated -r --format list",
        "update-outdated-deps": "pnpm update -r --latest",
        "link-tokens": "cd packages/components/src && ln -sf ../../tokens/dist/tokens.css tokens.css"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.6",
        "@chromatic-com/storybook": "5.0.0-next.1",
        "@eslint/js": "^9.34.0",
        "@storybook/addon-docs": "9.2.0-alpha.1",
        "@storybook/addon-vitest": "9.2.0-alpha.1",
        "@storybook/react-vite": "9.2.0-alpha.1",
        "@stylistic/eslint-plugin": "^5.2.3",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.3.0",
        "@types/react": "^19.1.11",
        "@types/react-dom": "^19.1.7",
        "@vicky-ui/tokens": "workspace:*",
        "@vitejs/plugin-react-swc": "^4.0.1",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "csstype": "^3.1.3",
        "eslint": "^9.34.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-storybook": "9.2.0-alpha.1",
        "globals": "^16.3.0",
        "jsdom": "^26.1.0",
        "playwright": "^1.55.0",
        "prettier": "^3.6.2",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "storybook": "9.2.0-alpha.1",
        "stylelint": "^16.23.1",
        "stylelint-config-clean-order": "^7.0.0",
        "stylelint-config-standard-scss": "^15.0.1",
        "stylelint-prettier": "^5.0.3",
        "tsx": "^4.20.5",
        "typescript": "~5.9.2",
        "typescript-eslint": "^8.41.0",
        "vite": "^7.1.3",
        "vitest": "^3.2.4"
    },
    "eslintConfig": {
        "extends": [
            "plugin:storybook/recommended"
        ]
    },
    "dependencies": {
        "react-aria-components": "^1.12.0"
    }
}
