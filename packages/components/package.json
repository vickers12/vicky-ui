{
    "name": "@vicky-ui/components",
    "version": "3.0.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "style": "dist/index.css",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./index.css": "./dist/index.css"
    },
    "files": [
        "dist",
        "src/**/*.css",
        "src/**/*.scss",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "pnpm run build:types && vite build --config vite.config.ts",
        "build:types": "tsc -p tsconfig.json",
        "test": "vitest run"
    },
    "peerDependencies": {
        "@vicky-ui/tokens": "^2.0.0",
        "react": "^18 || ^19",
        "react-dom": "^18 || ^19"
    },
    "dependencies": {
        "clsx": "^2.1.1"
    },
    "devDependencies": {
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vicky-ui/tokens": "workspace:*",
        "csstype": "^3.1.3",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "sass": "^1.89.2"
    }
}
